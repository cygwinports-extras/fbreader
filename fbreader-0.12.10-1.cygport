DESCRIPTION="E-book reader"
HOMEPAGE="http://www.fbreader.org/"
SRC_URI="http://www.fbreader.org/fbreader-sources-${PV}.tgz"

PATCH_URI="0.12.10-ctype.patch
	   0.12.10-gcc45.patch
	   0.12.10-libiconv.patch"

MAKEOPTS="-j1 TARGET_ARCH=desktop TARGET_STATUS=release UI_TYPE=gtk ZLSHARED=no"

src_compile() {
	lndirs
	cd ${B}
	cygmake
}

src_install() {
	cd ${B}
	cygmake do_install DESTDIR=${D}
	dodoc CHANGES* fbreader/LICENSE
}
